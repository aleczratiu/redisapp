<h1>Add user</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form class="form-inline my-2 my-lg-0" method="POST" action="/user/add">
    <div class="form-group">
        <label>Id</label>
        <input class="form-control mr-sm-2" name="id" type="text" placeholder="Add id" aria-label="Add id">
    </div>
    <br />
    <div class="form-group">
        <label>First name</label>
        <input class="form-control mr-sm-2" name="first_name" type="text" placeholder="First name" aria-label="First name">
    </div>
    <br />
    <div class="form-group">
        <label>Last name</label>
        <input class="form-control mr-sm-2" name="last_name" type="text" placeholder="Last name" aria-label="Last name">
    </div>
    <br />
    <div class="form-group">
        <label>Email</label>
        <input class="form-control mr-sm-2" name="email" type="text" placeholder="Email" aria-label="Email">
    </div>
    <br />
    <div class="form-group">
        <label>Phone</label>
        <input class="form-control mr-sm-2" name="phone" type="text" placeholder="Phone" aria-label="Phone">
    </div>
    <br />
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Add user</button>
</form>
